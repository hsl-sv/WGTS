<Window x:Class="WGTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WGTS"
        mc:Ignorable="d"
        Title="WGTS" Height="125" Width="720"
        Closing="Window_Closing">
    <Grid>
        <ComboBox x:Name="cbComPort" 
                  HorizontalAlignment="Left" Margin="10,10,0,0" Width="120" SelectionChanged="cbComPort_SelectionChanged" Height="28" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbRecvData" Margin="135,10,10,0" Text="" TextWrapping="Wrap" 
                   VerticalAlignment="Top" Height="28" />
        <TextBlock x:Name="tbConvertedTime" Margin="135,50,10,0" Text="" TextWrapping="Wrap" 
                   VerticalAlignment="Top" Height="28" />
        <Button x:Name="btnRefresh" 
                Content="Refresh" HorizontalAlignment="Left" Margin="10,50,0,0" Width="120" Height="28" Click="btnRefresh_Click" VerticalAlignment="Top"/>

    </Grid>
</Window>
